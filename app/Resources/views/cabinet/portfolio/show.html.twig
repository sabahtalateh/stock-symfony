{% extends ':cabinet:base.html.twig' %}

{% block body %}
    <h1>Portfolio</h1>

    <table class="table">
        <tbody>
        {#<tr>#}
            {#<th>Id</th>#}
            {#<td>{{ portfolio.id }}</td>#}
        {#</tr>#}
        <tr>
            <th>Name</th>
            <td>{{ portfolio.name }}</td>
        </tr>
        <tr>
            <th>Active</th>
            <td>{% if portfolio.active %}Yes{% else %}No{% endif %}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('portfolio_edit', { 'id': portfolio.id }) }}">Edit</a> <br>
    <a href="{{ path('portfolio_index') }}">Back to the list</a>
    {{ form_start(delete_form) }}
    <input type="submit" value="Delete">
    {{ form_end(delete_form) }}
{% endblock %}
